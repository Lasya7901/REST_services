import java.util.ArrayList;
import java.util.List;

class Student {
    public int id;
    public String name;
 
    public Student(int id, String name) {
this.id = id;
this.name = name;
    }
    public String toString(){
        return "[id: " + id + ",name: \""+name+"\"]";
    }
}

class StudentService{
     private List<Student> students = new ArrayList<>();


public Student addStudent(String name){
    Student s = new Student(students.size() + 1, name);
    students.add(s);
    return s;
}
public List<Student> getAll(){
  return students;
}
}


 
public class Main {
    public static void main(String[] args){
        StudentService service = new StudentService();
        System.out.println("POST / students - Adding Mike");
        service.addStudent("student A");
        System.out.println("POST / students - Adding Clark");
        service.addStudent("student B");
        System.out.println("GET / students - List of all students");
        List<Student> all = service.getAll();
        for (Student s : all){
            System.out.println(s);
        }
    }
}
